@model CarShop.Models.LoginModule
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div class="row justify-content-center" style="margin-top:20px; text-align:center">
<div class="col-md-4 col-lg-4 col-sm-12">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", @style = "margin-top:20px; text-align:left;" }))
    {
        @Html.AntiForgeryToken()
        <div class="regform">
            <div class="regheader">
                <h1>Login</h1>
            </div>
            <div class="regbody">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <button class="btn-dark form-control">Create</button>
            </div>
        </div>
    }
</div>
</div>
